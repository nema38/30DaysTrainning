		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js">
		</script>
		<script>
			(function() {
				var dd = $('dd');
				
				dd.filter(':nth-child(n+4)').addClass('hide');
				$('dt').on('mouseenter', function() {
					$(this)
						.next()
							.slideDown(500)
							.siblings('dd')
								.slideUp(500);
				})
			
				
			})();
		</script>
